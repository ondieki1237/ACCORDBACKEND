# Example environment variables for Accord Medical Backend
# Copy to .env and fill with real values before running

# Server
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/accord_backend

# JWT
JWT_SECRET=your_jwt_secret_here

# Cloudinary (either CLOUDINARY_CLOUD_NAME or NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME is used)
CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email (nodemailer)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_smtp_user
EMAIL_PASS=your_smtp_password
EMAIL_FROM="Accord Medical" <no-reply@example.com>

# Optional
# SENTRY_DSN=your_sentry_dsn
# OTHER keys used by external services

# Machine reminders
MACHINE_REMINDER_DAYS=5
MACHINE_REMINDER_RECIPIENTS=techsupport@accordmedical.co.ke

# Google Drive (Service Account)
# Path to service account JSON (example: ./project/kazihub-468305-1a197c2229be.json)
GOOGLE_APPLICATION_CREDENTIALS=./project/kazihub-468305-1a197c2229be.json
# Optional: specify a Drive folder ID to use directly. If not set, the app will create/find a folder named in GOOGLE_DRIVE_FOLDER_NAME
GOOGLE_DRIVE_FOLDER_ID=15g9HASVWuRiABJAgGuqi26YMzcL-MnF-
GOOGLE_DRIVE_FOLDER_NAME=ACCORD_MACHINES
