{
  "name": "accord-medical-backend",
  "version": "1.2.0",
  "description": "Field Sales Personnel Tracking and Management System for Accord Medical",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "seed": "node src/scripts/seedData.js",
    "seed:facilities": "node ../scripts/seedFacilities.js",
    "run:weekly-summary": "DOTENV_CONFIG_PATH=src/.env node -r dotenv/config -e \"import('./src/services/scheduledJobs.js').then(m=>m.generateWeeklySummaries()).catch(e=>{console.error(e);process.exit(1)})\"",
    "create-admins": "DOTENV_CONFIG_PATH=src/.env node -r dotenv/config src/scripts/create-admins.js"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "googleapis": "^170.1.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.17.2",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "medical",
    "sales",
    "tracking",
    "field-personnel",
    "crm"
  ],
  "author": "Accord Medical",
  "license": "MIT"
}
